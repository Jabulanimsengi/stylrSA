.section {
  padding: 4rem 0;
  background: linear-gradient(135deg, #f8f9fb 0%, #fff 100%);
}

.container {
  max-width: 900px;
  margin: 0 auto;
  padding: 0 1.5rem;
}

.header {
  text-align: center;
  margin-bottom: 3rem;
}

.title {
  font-size: 2.25rem;
  font-weight: 700;
  color: #43414A;
  margin-bottom: 0.5rem;
}

.subtitle {
  font-size: 1.125rem;
  color: #4D4952;
}

.slideshow {
  background: white;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.videoWrapper {
  position: relative;
  width: 100%;
  padding-top: 177.78%; /* 9:16 aspect ratio (portrait) */
  background: #000;
}

.videoContainer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.thumbnail {
  width: 100%;
  height: 100%;
  position: relative;
  cursor: pointer;
  overflow: hidden;
}

.thumbnailImage {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.thumbnailPlaceholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #F51957 0%, #d4144c 100%);
  font-size: 5rem;
}

.playButton {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: rgba(245, 25, 87, 0.9);
  border: none;
  color: white;
  font-size: 2rem;
  cursor: pointer;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 6px;
}

.playButton:hover {
  background: rgba(245, 25, 87, 1);
  transform: translate(-50%, -50%) scale(1.1);
}

.duration {
  position: absolute;
  bottom: 1rem;
  right: 1rem;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 0.375rem 0.75rem;
  border-radius: 8px;
  font-size: 0.875rem;
  font-weight: 600;
}

.info {
  padding: 2rem;
  text-align: center;
}

.salonName {
  font-size: 1.5rem;
  font-weight: 700;
  color: #F51957;
  text-decoration: none;
  transition: color 0.2s;
}

.salonName:hover {
  color: #d4144c;
}

.location {
  font-size: 1rem;
  color: #4D4952;
  margin: 0.5rem 0;
}

.service {
  font-size: 1.125rem;
  font-weight: 600;
  color: #43414A;
  margin: 0.5rem 0;
}

.caption {
  font-size: 1rem;
  color: #4D4952;
  font-style: italic;
  margin-top: 1rem;
}

.views {
  font-size: 0.875rem;
  color: #4D4952;
  margin-top: 0.5rem;
}

.controls {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.5rem 2rem;
  background: #f9f6f1;
}

.navButton {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background: white;
  border: 2px solid #E5E5E5;
  font-size: 1.5rem;
  color: #F51957;
  cursor: pointer;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navButton:hover {
  background: #F51957;
  color: white;
  border-color: #F51957;
  transform: scale(1.1);
}

.indicators {
  display: flex;
  gap: 0.5rem;
  flex: 1;
  justify-content: center;
  max-width: 400px;
  overflow-x: auto;
  padding: 0.5rem 0;
}

.indicator {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background: #D0D0D0;
  border: none;
  cursor: pointer;
  transition: all 0.3s;
  flex-shrink: 0;
}

.indicator.active {
  background: #F51957;
  transform: scale(1.3);
}

.skeleton {
  height: 600px;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s ease-in-out infinite;
  border-radius: 20px;
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* Dark Mode */
@media (prefers-color-scheme: dark) {
  .section {
    background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
  }

  .title {
    color: #ffffff;
  }

  .subtitle {
    color: #b3b3b3;
  }

  .slideshow {
    background: #2a2a2a;
  }

  .info {
    background: #2a2a2a;
  }

  .salonName {
    color: #ff3366;
  }

  .salonName:hover {
    color: #ff5577;
  }

  .location, .caption, .views {
    color: #b3b3b3;
  }

  .service {
    color: #ffffff;
  }

  .controls {
    background: #1a1a1a;
  }

  .navButton {
    background: #2a2a2a;
    border-color: #404040;
    color: #ff3366;
  }

  .navButton:hover {
    background: #ff3366;
    color: white;
    border-color: #ff3366;
  }

  .indicator {
    background: #404040;
  }

  .indicator.active {
    background: #ff3366;
  }
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .section {
    padding: 2rem 0;
  }

  .container {
    padding: 0 1rem;
    max-width: 500px;
  }

  .title {
    font-size: 1.75rem;
  }

  .subtitle {
    font-size: 1rem;
  }

  .videoWrapper {
    border-radius: 16px 16px 0 0;
  }

  .playButton {
    width: 60px;
    height: 60px;
    font-size: 1.5rem;
  }

  .info {
    padding: 1.5rem;
  }

  .salonName {
    font-size: 1.25rem;
  }

  .controls {
    padding: 1rem;
  }

  .navButton {
    width: 40px;
    height: 40px;
    font-size: 1.25rem;
  }

  .indicators {
    gap: 0.375rem;
  }

  .indicator {
    width: 8px;
    height: 8px;
  }
}
