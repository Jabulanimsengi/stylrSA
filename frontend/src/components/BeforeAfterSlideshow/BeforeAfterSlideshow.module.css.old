.section {
  padding: 3rem 0;
  background: var(--color-surface);
}

.container {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 1.5rem;
}

.header {
  margin-bottom: 2rem;
}

.title {
  font-size: 1.75rem;
  font-weight: 700;
  color: var(--color-text-strong);
  margin-bottom: 0.5rem;
}

.subtitle {
  font-size: 0.95rem;
  color: var(--color-text-muted);
}

.slideshow {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 1.5rem;
}

.card {
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.3s ease;
  border: 1px solid var(--color-border);
}

.card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 16px rgba(245, 25, 87, 0.15);
  border-color: rgba(245, 25, 87, 0.3);
}

.comparisonWrapper {
  position: relative;
  width: 100%;
  height: 280px;
  overflow: hidden;
  background: #f9f9f9;
}

.comparison {
  width: 100%;
  height: 100%;
}

.info {
  padding: 1.25rem;
}

.salonName {
  font-size: 1.1rem;
  font-weight: 600;
  color: #F51957;
  text-decoration: none;
  transition: color 0.2s;
  display: block;
  margin-bottom: 0.5rem;
}

.salonName:hover {
  color: #d4144c;
}

.location {
  font-size: 0.875rem;
  color: var(--color-text-muted);
  margin-bottom: 0.5rem;
  display: flex;
  align-items: center;
  gap: 0.25rem;
}

.location::before {
  content: "üìç";
  font-size: 0.75rem;
}

.service {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--color-text-strong);
  background: rgba(245, 25, 87, 0.08);
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  display: inline-block;
  margin-bottom: 0.5rem;
}

.caption {
  font-size: 0.85rem;
  color: var(--color-text-muted);
  line-height: 1.4;
  margin-top: 0.5rem;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.controls {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  padding: 1.5rem;
  margin-top: 1rem;
}

.navButton {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: white;
  border: 1px solid var(--color-border);
  font-size: 1.25rem;
  color: #F51957;
  cursor: pointer;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navButton:hover {
  background: #F51957;
  color: white;
  border-color: #F51957;
  transform: scale(1.1);
}

.indicators {
  display: flex;
  gap: 0.375rem;
  align-items: center;
}

.indicator {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #D0D0D0;
  border: none;
  cursor: pointer;
  transition: all 0.3s;
}

.indicator.active {
  background: #F51957;
  transform: scale(1.4);
  width: 24px;
  border-radius: 4px;
}

.skeleton {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 1.5rem;
}

.skeletonCard {
  height: 420px;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s ease-in-out infinite;
  border-radius: 12px;
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* Dark Mode */
@media (prefers-color-scheme: dark) {
  .card {
    background: #2a2a2a;
    border-color: #404040;
  }

  .card:hover {
    border-color: rgba(255, 51, 102, 0.5);
  }

  .comparisonWrapper {
    background: #1a1a1a;
  }

  .salonName {
    color: #ff3366;
  }

  .salonName:hover {
    color: #ff5577;
  }

  .service {
    background: rgba(255, 51, 102, 0.15);
  }

  .navButton {
    background: #2a2a2a;
    border-color: #404040;
    color: #ff3366;
  }

  .navButton:hover {
    background: #ff3366;
    color: white;
    border-color: #ff3366;
  }

  .indicator {
    background: #404040;
  }

  .indicator.active {
    background: #ff3366;
  }
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .section {
    padding: 2rem 0;
  }

  .container {
    padding: 0 1rem;
  }

  .title {
    font-size: 1.5rem;
  }

  .subtitle {
    font-size: 0.875rem;
  }

  .slideshow {
    grid-template-columns: 1fr;
    gap: 1.25rem;
  }

  .comparisonWrapper {
    height: 240px;
  }

  .info {
    padding: 1rem;
  }

  .salonName {
    font-size: 1rem;
  }

  .controls {
    padding: 1rem;
    gap: 0.75rem;
  }

  .navButton {
    width: 36px;
    height: 36px;
    font-size: 1.1rem;
  }

  .indicator {
    width: 6px;
    height: 6px;
  }

  .indicator.active {
    width: 18px;
  }
}
